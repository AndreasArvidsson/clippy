{
    "compilerOptions": {
        "module": "preserve",
        "target": "ES2024",
        "moduleResolution": "bundler",
        "lib": ["ES2024"],
        "types": ["node"],
        "rootDir": "src",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noEmit": true,
        "strict": true,
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true
    },
    "include": ["src"],
    "exclude": ["src/renderer/**/*"]
}
