{
    "name": "clipboard-manager",
    "displayName": "Clipboard manager",
    "description": "Clipboard manager",
    "version": "1.0.0",
    "author": "AndreasArvidsson",
    "license": "MIT",
    "main": "out/main.js",
    "scripts": {
        "build": "tsc -p . && npm run copyFiles",
        "start": "npm run build && electron .",
        "copyFiles": "cp src/index.html out/ && cp node_modules/bootstrap/dist/css/bootstrap.min.css out/ && cp src/styles.css out/"
    },
    "dependencies": {
        "bootstrap": "5.3.3",
        "classnames": "2.5.1",
        "clipboard-event": "1.6.0",
        "react": "18.2.0",
        "react-dom": "18.2.0"
    },
    "devDependencies": {
        "@electron-forge/cli": "7.4.0",
        "@types/node": "20.12.7",
        "@types/react-dom": "18.2.25",
        "electron": "30.0.1",
        "prettier": "3.2.5",
        "typescript": "5.4.5"
    }
}
