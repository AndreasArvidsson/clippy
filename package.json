{
    "name": "clippy",
    "displayName": "Clippy",
    "description": "Clipboard manager with RPC",
    "version": "1.0.0",
    "author": "AndreasArvidsson",
    "license": "MIT",
    "main": "out/main.js",
    "scripts": {
        "clean": "rm -rf out/*",
        "start": "npm run build && electron .",
        "build": "npm run compile && npm run prepareAssets",
        "compile": "tsc -p .",
        "prepareAssets": "tsx prepareAssets.ts",
        "package": "npm run build && tsx packager.ts",
        "test": "eslint src && prettier --check .",
        "fix": "prettier --write ."
    },
    "dependencies": {
        "bootstrap": "5.3.3",
        "clipboard-event": "1.6.0",
        "react-bootstrap-icons": "1.11.4",
        "react-dom": "18.2.0",
        "react": "18.2.0",
        "uuid": "9.0.1"
    },
    "devDependencies": {
        "@electron/packager": "18.3.2",
        "@types/node": "20.12.7",
        "@types/react-dom": "18.2.25",
        "@types/uuid": "9.0.8",
        "@typescript-eslint/eslint-plugin": "7.7.1",
        "@typescript-eslint/parser": "7.7.1",
        "electron": "30.0.1",
        "eslint-plugin-react": "7.34.1",
        "eslint": "8.56.0",
        "prettier": "3.2.5",
        "typescript": "5.4.5"
    }
}
