{
    "name": "clippy",
    "displayName": "Clippy",
    "productName": "Clippy",
    "description": "Clipboard manager with RPC",
    "version": "0.20.0",
    "author": "AndreasArvidsson",
    "license": "MIT",
    "main": "out/main.js",
    "scripts": {
        "clean": "rm -rf out dist",
        "start": "electron-vite dev",
        "build": "electron-vite build",
        "package": "npm run clean && npm run build && jiti scripts/package.ts",
        "typecheck": "tsc -p . && tsc -p src/renderer",
        "lint": "npm run typecheck && eslint src && prettier --check .",
        "fix": "eslint src --fix && prettier --write ."
    },
    "dependencies": {
        "bootstrap": "^5.3.8",
        "clipboard-event": "^1.6.0",
        "preact": "^10.27.1",
        "react-bootstrap-icons": "^1.11.6",
        "sharp": "^0.34.4",
        "talon-rpc": "^2.2.0",
        "uuid": "^13.0.0"
    },
    "devDependencies": {
        "@electron/packager": "^18.4.4",
        "@eslint/js": "^9.31.0",
        "@preact/preset-vite": "^2.10.2",
        "@types/node": "^24.3.1",
        "@types/react": "^19.1.12",
        "@types/sharp": "^0.32.0",
        "electron": "^38.0.0",
        "electron-vite": "^4.0.0",
        "eslint": "^9.35.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-react": "^7.37.5",
        "jiti": "^2.5.1",
        "prettier": "^3.6.2",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.43.0",
        "vite-plugin-purgecss": "^0.2.13"
    }
}
