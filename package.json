{
    "name": "clipboard-manager",
    "displayName": "Clipboard manager",
    "description": "Clipboard manager",
    "version": "1.0.0",
    "author": "AndreasArvidsson",
    "license": "MIT",
    "main": "out/main.js",
    "scripts": {
        "clean": "rm -rf out/*",
        "build": "tsc -p . && npm run copyAssets",
        "build2": "tsc -p . && tsx esbuild.ts && npm run copyAssets",
        "start": "npm run build && electron .",
        "go": "electron .",
        "copyAssets": "sh copyAssets.sh",
        "test": "eslint src && prettier --check .",
        "fix": "prettier --write ."
    },
    "dependencies": {
        "bootstrap": "5.3.3",
        "classnames": "2.5.1",
        "clipboard-event": "1.6.0",
        "react-dom": "18.2.0",
        "react": "18.2.0"
    },
    "devDependencies": {
        "@electron-forge/cli": "7.4.0",
        "@types/node": "20.12.7",
        "@types/react-dom": "18.2.25",
        "@typescript-eslint/eslint-plugin": "7.7.1",
        "@typescript-eslint/parser": "7.7.1",
        "electron": "30.0.1",
        "esbuild": "0.20.2",
        "eslint-plugin-react": "7.34.1",
        "eslint": "8.56.0",
        "prettier": "3.2.5",
        "typescript": "5.4.5"
    }
}
